<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.android.themoviedb.MovieDetails">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_backdrop"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>

        <ImageView
            android:id="@+id/iv_detail_poster"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_below="@id/iv_backdrop"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="-40dp"/>

        <TextView
            android:id="@+id/tv_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_backdrop"
            android:layout_toRightOf="@+id/iv_detail_poster"
            android:text="Movie Title"
            android:textSize="26dp"
            android:textColor="@color/colorAccentLght"
            android:paddingLeft="8dp"
            android:paddingRight="16dp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tv_detail_release_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-01-01"
            android:layout_toRightOf="@id/iv_detail_poster"
            android:layout_below="@+id/tv_detail_title"
            android:textColor="#bdbdbd"
            android:layout_marginTop="8dp"
            android:paddingLeft="8dp" />

        <TextView
            android:id="@+id/tv_detail_overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_detail_poster"
            android:text="Overview Text"
            android:textSize="16dp"
            android:layout_marginTop="14dp"
            android:textColor="#eeeeee"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginBottom="16dp"/>

    </RelativeLayout>

</ScrollView>
